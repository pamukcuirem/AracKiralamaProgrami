<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleViewForAdmin">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForAdmin"
        android:layout_width="match_parent"
        android:layout_height="493dp"

        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/goDeleteVehicleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/goAddVehicleButton"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#60006064"
        android:onClick="saveVehicle"
        android:text="Ekle"
        android:textAlignment="center"
        android:textColor="#C1000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goDeleteVehicleButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goDeleteVehicleButton"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#60006064"
        android:onClick="saveVehicle"
        android:text="Sil"
        android:textAlignment="center"
        android:textColor="#C1000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goShowCustomerButton" />

    <Button
        android:id="@+id/goShowCustomerButton"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#60006064"
        android:onClick="saveVehicle"
        android:text="Müşteri Listesi"
        android:textAlignment="center"
        android:textColor="#C1000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>