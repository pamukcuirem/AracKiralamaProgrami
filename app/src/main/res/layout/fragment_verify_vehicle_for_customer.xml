<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyVehicleForCustomer">


    <Button
        android:id="@+id/verifyButton"
        android:layout_width="307dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="101dp"
        android:backgroundTint="#60006064"
        android:text="Onayla"
        android:textAlignment="center"
        android:textColor="#C1000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payView" />

    <TextView
        android:id="@+id/textViewRent"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="32dp"
        android:text="Kiralama Özeti"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/rentVehicleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rentVehicleView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:text="Kiralanan Araç"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/rentDateView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRent" />

    <TextView
        android:id="@+id/rentDateView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="13dp"
        android:text="Kiralanan Aralık"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/officeView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rentVehicleView" />

    <TextView
        android:id="@+id/officeView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="8dp"
        android:text="Ofis"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/payView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rentDateView" />

    <TextView
        android:id="@+id/payView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="42dp"
        android:text="Fiyat"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/verifyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/officeView" />

</androidx.constraintlayout.widget.ConstraintLayout>